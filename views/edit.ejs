<% layout('layout/boilerplate') %>
<div class="register-container">
    <div class="register-form">
        <h1>Edit Camp</h1>
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
            <div>
                <label for="title">camp name: </label> <br>
                <input type="text" id="title" name="campground[title]" value="<%=campground.title%>" required>
            </div>
            <div>
                <label for="location">camp location: </label> <br>
                <input type="text" id="location" name="campground[location]" value="<%=campground.location%>" required>
            </div>
            <div>
                <label for="description">camp description: </label> <br>
                <textarea name="campground[description]" id="description" cols="30" rows="5" required><%=campground.description%> <%=campground.location%></textarea>
            </div>
            <div>
                <label for="price">camp price per night: </label> <br>
                <input type="text" id="price" name="campground[price]" value="<%=campground.price%>" required>
            </div>
           
            <button>save</button>
        </form>
        <a id="cancel" href="/campgrounds/<%=campground._id%>">cancel</a>
    </div>
    <div class="register-img">
        <img id="register-img" src="https://images.unsplash.com/photo-1547919144-08fd4d3a6224?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80" alt="">
    </div>
    
</div>
