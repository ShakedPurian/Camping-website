<% layout('layout/boilerplate') %>
<div class="home-title">
    <h1>Camp-IL</h1>
    <h2>Find your next adventure</h2>
</div>
<div class="home-container">
    <div class="panel active" id="explore">
        <p>EXPLORE</p>
    </div>
    <div class="panel " id="travel">
        <p>TRAVEL</p>
    </div>
    <div class="panel" id="rest">
        <p>REST</p>
    </div>
    <div class="panel" id="enjoy">
        <p>CONNECT</p>
    </div>
</div>
<div class="home-text">
    <h2>Camping with Camp-IL</h2>
    <p>We're here to help you dream up your next trip, figure out the details, and reserve experiences at the best camp sites across the country.
         There's something for everyone on Camp-IL! <br>so get out there, find your next adventure, and bring home a story!</p>
    <p class="home-help">Need help planning your next adventure?
        Our experts team is here for you!
    </p>
    <a href="/contact">Contact Us</a>
</div>

<script>
const panels = document.querySelectorAll('.panel');

function removeActive() {
    panels.forEach(panel => {
        panel.classList.remove('active')
    })
}

panels.forEach(panel => {
    panel.addEventListener('click', () => {
        removeActive();
        panel.classList.add('active')
    })
})
</script>